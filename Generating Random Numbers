main.dart

import 'package:flutter/material.dart';

import 'package:first_app/gradient_container.dart';

void main() {
  runApp(
    const MaterialApp(
      home: Scaffold(
        body: GradientContainer(
          Color.fromARGB(139, 92, 5, 242),
          Color.fromRGBO(92, 5, 242, 0.969),
        ),
      ),
    ),
  );
}
